<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_festival"
    android:orientation="vertical">

    <TextView
        android:id="@+id/day_festival_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_white_green"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="설명 : " />

        <TextView
            android:id="@+id/day_festival_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_white_green"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호 : " />

        <TextView
            android:id="@+id/day_festival_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="000-000-0000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_button"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소 : " />

        <TextView
            android:id="@+id/day_festival_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="address" />
    </LinearLayout>

    <TextView
        android:id="@+id/day_festival_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/main_white_green"
        android:text="0000-00-00 ~ 0000-00-00" />

    <Button
        android:id="@+id/day_festival_hompage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_button"
        android:text="홈페이지 이동" />
</LinearLayout>