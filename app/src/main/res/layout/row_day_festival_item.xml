<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/border_festival"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/group_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:checkable="false"
        android:clickable="true"
        android:elevation="4dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="#E1E3E5"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="축제 이름"
                android:textColor="@color/main_green"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/day_festival_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="설명"
                android:textColor="@color/main_green"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/day_festival_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="content"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="전화번호"
                android:textColor="@color/main_green"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/day_festival_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="000-000-0000"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="주소"
                android:textColor="@color/main_green"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/day_festival_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="address"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="주최기관"
                android:textColor="@color/main_green"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/day_festival_auspc_instt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:paddingRight="10dp"
                android:text="기관"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="후원기관"
                android:textColor="@color/main_green"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/day_festival_suprt_instt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="기관"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="축제 기간"
                android:textColor="@color/main_green"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/day_festival_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="0000-00-00 ~ 0000-00-00"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/day_festival_hompage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/r12_whitegreen"
                android:text="홈페이지 이동"
                android:textColor="@color/main_green"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</LinearLayout>